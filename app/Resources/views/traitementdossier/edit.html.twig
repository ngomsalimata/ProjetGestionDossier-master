{% extends 'base.html.twig' %}

{% block  breadcrumb %}
    <li>
        <a href='{{ path('traitementdossier_index') }}'>Revenir Ã  la liste</a>
    </li>
    <li class="active">Modification de TraitementDossier</li>
    {% endblock %}

{% block  page_header %}
    Formulaire
    <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        Modification de TraitementDossier
    </small>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">

            {{ form_start(edit_form,{'attr':{'class':'form-horizontal','role':'form'}}) }}                                                    <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">{{ form_label(edit_form.etat) }}</label>
                <div class="col-sm-9">
                    <span class="input-icon input-icon-right">
                        {{ form_widget(edit_form.etat,{'attr':{'id':'form-field-icon-1'}}) }}
                    </span>
                </div>
            </div>

            <div class="form-group hidden">
                <label class="col-sm-3 control-label no-padding-right">{{ form_label(edit_form.dateDebut) }}</label>
                <div class="col-sm-9">
                    <span class="input-icon input-icon-right">
                        {{ form_widget(edit_form.dateDebut,{'attr':{'id':'form-field-icon-1'}}) }}
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">{{ form_label(edit_form.dateFin) }}</label>
                <div class="col-sm-9">
                    <span class="input-icon input-icon-right">
                        {{ form_widget(edit_form.dateFin,{'attr':{'id':'form-field-icon-1'}}) }}
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">{{ form_label(edit_form.remarques) }}</label>
                <div class="col-sm-9">
                    <span class="input-icon input-icon-right">
                        {{ form_widget(edit_form.remarques,{'attr':{'id':'form-field-icon-1'}}) }}
                    </span>
                </div>
            </div>
            <div class="form-group hidden">
                <label class="col-sm-3 control-label no-padding-right">{{ form_label(edit_form.user) }}</label>
                <div class="col-sm-9">
                    <span class="input-icon input-icon-right">
                        {{ form_widget(edit_form.user,{'attr':{'id':'form-field-icon-1'}}) }}
                    </span>
                </div>
            </div>
            <div class="form-group hidden">
                <label class="col-sm-3 control-label no-padding-right">{{ form_label(edit_form.dossier) }}</label>
                <div class="col-sm-9">
                    <span class="input-icon input-icon-right">
                        {{ form_widget(edit_form.dossier,{'attr':{'id':'form-field-icon-1'}}) }}
                    </span>
                </div>
            </div>
            
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-warning tooltip-warning" data-rel="tooltip" data-placement="top"   title="modifier TraitementDossier">
                        <i class="ace-icon fa fa-edit bigger-110"></i>
                        modifier
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset" data-rel="tooltip" data-placement="top"   title="vider le formulaire de TraitementDossier">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        vider le formulaire
                    </button>
                </div>
            </div>

            {{ form_end(edit_form) }}

        </div><!-- /.col -->
    </div><!-- /.row -->           
{% endblock %}
