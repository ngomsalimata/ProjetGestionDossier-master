    {% extends 'base.html.twig' %}

    {% block  breadcrumb %}
    <li>
        <a href='{{ path('notification_index') }}'>Revenir à la liste</a>
    </li>
    <li class="active">Formulaire de Notification</li>
        {% endblock %}

    {% block  page_header %}
    Formulaire
    <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        Création de Notification
    </small>
    {% endblock %}



    {% block body %}
    <div class="row">
        <div class="col-xs-12">

            {{ form_start(form,{'attr':{'class':'form-horizontal','role':'form','action':path('notification_new')}}) }}                                    
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">{{ form_label(form.libelle) }}</label>
                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            {{ form_widget(form.libelle,{'attr':{'id':'form-field'}}) }}
                        </span>
                    </div>
                </div>                        

                                    
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">{{ form_label(form.contenu) }}</label>
                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            {{ form_widget(form.contenu,{'attr':{'id':'form-field'}}) }}
                        </span>
                    </div>
                </div>                        

                                    
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">{{ form_label(form.date) }}</label>
                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            {{ form_widget(form.date,{'attr':{'id':'form-field'}}) }}
                        </span>
                    </div>
                </div>                        

                                    
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">{{ form_label(form.etat) }}</label>
                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            {{ form_widget(form.etat,{'attr':{'id':'form-field'}}) }}
                        </span>
                    </div>
                </div>                        

                        
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info tooltip-info" data-rel="tooltip" data-placement="top"   title="enregistrer Notification">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            enregistrer
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" data-rel="tooltip" data-placement="top"  type="reset"  title="Vider le formulaire de Notification" >
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            vider le formulaire
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}

            </div><!-- /.col -->
        </div><!-- /.row -->           

                <div class="clearfix form-actions">
    <div class="col-md-offset-3 col-md-9">
    </div>
</div>{% endblock %}
        