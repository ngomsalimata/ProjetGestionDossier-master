<div id="login-box" class="login-box visible widget-box no-border">
    <div class="widget-body">
        <div class="widget-main">
            <h4 class="header green lighter bigger">
                <i class="ace-icon fa fa-users blue"></i>
                Modification du compte
            </h4>
            <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
                <fieldset>
                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prénom','required':'required'}}) }}                              
                            <i class="ace-icon fa fa-check"></i>
                        </span>
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom','required':'required'}}) }}                              
                            <i class="ace-icon fa fa-check"></i>
                        </span>
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}                              
                            <i class="ace-icon fa fa-envelope"></i>
                        </span>
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Nom Utilisateur'}}) }}                              
                            <i class="ace-icon fa fa-user"></i>
                        </span>
                    </label>
                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.datenaiss,{'attr':{'class':'form-control','placeholder':'Date Naiss'}}) }}
                            <i class="ace-icon fa fa-lock"></i>
                        </span>
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.lieunaiss,{'attr':{'class':'form-control','placeholder':'Lieu Naiss'}}) }}
                            <i class="ace-icon fa fa-retweet"></i>
                        </span>
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            {{ form_widget(form.telephone,{'attr':{'class':'form-control','placeholder':'Téléphone'}}) }}
                            <i class="ace-icon fa fa-retweet"></i>
                        </span>
                    </label>

                    <div class="clearfix">
                        <button type="reset" class="width-30 pull-left btn btn-sm">
                            <i class="ace-icon fa fa-refresh"></i>
                            <span class="bigger-110">Reset</span>
                        </button>

                        <button class="width-65 pull-right btn btn-sm btn-warning">
                            <span class="bigger-110">Modifier</span>
                            <i class="ace-icon fa fa-edit icon-on-right"></i>
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>

        <div class="btn btn-sm btn-success col-sm-12">
            <a href="{{ path('homepage') }}" class="back-to-login-link">
                <span style="color: yellow; font-weight: bold;"> 
                    <i class="ace-icon fa fa-home"></i>
                    Retour à l'accueil </span>
            </a>
        </div>
    </div><!-- /.widget-body -->
</div><!-- /.signup-box -->