{% block extends %}
    {{ "{% extends 'base.html.twig' %}" }}
{% endblock extends %}

{% block body %}
    {{ "{% block  breadcrumb %}" }}
    <li>
        {{ "<a href='{{ path('"~(entity|lower)~"_index') }}'>Revenir à la liste</a>" }}
    </li>
    <li class="active">Formulaire de {{ entity }}</li>
        {{ "{% endblock %}" }}

    {{ "{% block  page_header %}" }}
    Formulaire
    <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        Création de {{entity}}
    </small>
    {{ "{% endblock %}" }}



    {{ "{% block body %}" }}
    <div class="row">
        <div class="col-xs-12">

            {{ '{{ form_start(form,{\'attr\':{\'class\':\'form-horizontal\',\'role\':\'form\'}}) }}' }}
            {%- for field, metadata in fields %}
            {% if not loop.first %}

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">{{ '{{ form_label(form.'~field~') }}' }}</label>
                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            {{ '{{ form_widget(form.'~field~',{\'attr\':{\'id\':\'form-field\'}}) }}'}}
                        </span>
                    </div>
                </div>                        

            {% endif %}
            {% endfor %}

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info tooltip-info" data-rel="tooltip" data-placement="top"   title="{{ "enregistrer "~entity}}">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            enregistrer
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" data-rel="tooltip" data-placement="top"  type="reset"  title="{{ "Vider le formulaire de "~entity}}" >
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            vider le formulaire
                        </button>
                    </div>
                </div>

                {{ '{{ form_end(form) }}' }}

            </div><!-- /.col -->
        </div><!-- /.row -->           

        {% set hide_edit, hide_delete = true, true %}
        {{ include('crud/views/others/record_actions.html.twig.twig') -}}
        {{ "{% endblock %}" }}
        {% endblock body %}
